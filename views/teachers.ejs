<!DOCTYPE html>
<html>

<head>
    <%- include( 'layouts/head'); -%>
</head>

<body>
    <div class="container" id="teacherPage">
        <%- include( 'layouts/header'); -%>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="icon" data-toggle="modal" data-target="#addTeacherModal"><i class="mdi-social-person-add openModalAdd"></i></div>
                    <h1>Teachers</h1>
                    <% i=1 %>
                        <%if (teachers.length> 0) { %>
                            <table class="table table-striped table-hover ">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Surname</th>
                                        <th>Middle Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% (teachers).forEach(function(teacher){ %>
                                        <%if (typeof teacher !='undefined' ) { %>
                                            <tr>
                                                <td>
                                                    <%=i ++ %>
                                                </td>
                                                <td>
                                                    <%=teacher.name.first %>
                                                </td>
                                                <td>
                                                    <%=teacher.name.last %>
                                                </td>
                                                <td>
                                                    <%=teacher.name.middle %>
                                                </td>
                                                <td>
                                                    <i class="mdi-action-delete deleteTeacher editTools"></i>
                                                    <i class="mdi-editor-mode-edit editTeacher editTools"></i>
                                                </td>
                                            </tr>
                                            <% } %>
                                                <% });%>
                                </tbody>
                            </table>
                            <span id="listIsClear">List is clear. Please add auditorium.</span>
                            <% } else { %>
                                <table class="table table-striped table-hover ">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Surname</th>
                                            <th>Middle Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr></tr>
                                    </tbody>
                                </table>
                                <span id="listIsClear">List is clear. Please add auditorium.</span>
                            <% } %>
                </div>
            </div>
            <%- include( 'layouts/footer'); -%>
                <%- include( 'modals/teachers/addTeacher'); -%>
                    <%- include( 'modals/teachers/deleteTeacher'); -%>
                        <%- include( 'modals/teachers/editTeacher'); -%>
    </div>
</body>

</html>
