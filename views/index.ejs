<!DOCTYPE html>
<html>
    <%- include( 'layouts/head'); -%>
<body>
    <div class="container">
        <%- include( 'layouts/header'); -%>
            <h1>Teachers</h1>
            <%if (teachers.length> 0) { %>
                <table class="table table-striped table-hover ">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Middle Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% i=1 %>
                            <% (teachers).forEach(function(teacher){ %>
                                <%if (typeof teacher !='undefined' ) { %>
                                    <tr>
                                        <td>
                                            <%=i ++ %>
                                        </td>
                                        <td>
                                            <%=teacher.name.first %>
                                        </td>
                                        <td>
                                            <%=teacher.name.last %>
                                        </td>
                                        <td>
                                            <%=teacher.name.middle %>
                                        </td>
                                    </tr>
                                <% } %>
                            <% });%>
                    </tbody>
                </table>
            <% } %>
        <%- include( 'layouts/footer'); -%>
    </div>
</body>

</html>
